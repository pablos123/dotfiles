#!/bin/bash

branch=$1

if [ $# -ne 1 ]; then
    printf "\nUsage: reset_commit <name_of_the_branch_to_push_to>\n\n"
    exit 1
fi

# Checkout to an orphan branch
git checkout --orphan latest_branch
    
# Add all the files
git add -A
    
# Commit the changes
git commit -m "Reset commit"
    
# Delete the master/main branch
git branch -D "$branch"
    
# Rename the current branch to master/main
git branch -m "$branch"
    
# Force update your repository
git push -f origin "$branch"
